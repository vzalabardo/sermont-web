---
interface BreadcrumbItem {
  label: string;
  href?: string;
}

interface Props {
  items: BreadcrumbItem[];
}

const { items } = Astro.props;
---

<nav aria-label="Breadcrumb" class="text-[11px] uppercase tracking-widest text-gray-400 mb-6">
    {items.map((item, i) => (
        <>
            {i > 0 && <span class="mx-2">/</span>}
            {item.href ? (
                <a href={item.href} class="hover:text-[#a6192e] transition-colors">{item.label}</a>
            ) : (
                <span class="text-[#0a192f] font-bold">{item.label}</span>
            )}
        </>
    ))}
</nav>
