---
interface Props {
  heading?: string;
  text?: string;
}
const { 
  heading = "Lleve su planta al siguiente nivel.", 
  text = "Consúltenos sin compromiso sobre su proyecto de lavado. Ofrecemos estudios de eficiencia y ROI personalizados." 
} = Astro.props;
---

<section id="contacto" class="py-24 bg-[#0a192f] text-white relative overflow-hidden">
    <div class="absolute top-0 right-0 w-1/3 h-full bg-red-600/5 skew-x-12 translate-x-20"></div>
    <div class="max-w-7xl mx-auto px-6 relative z-10">
        <div class="grid lg:grid-cols-2 gap-20">
            <div>
                <h3 class="text-red-400 font-bold uppercase tracking-widest text-xs mb-4">Contacto Directo</h3>
                <h2 class="text-5xl font-bold mb-8 leading-tight italic tracking-tighter uppercase">{heading}</h2>
                <p class="text-gray-400 text-lg mb-12">{text}</p>
                <div class="space-y-6">
                    <div class="flex items-center gap-6">
                        <div class="w-12 h-12 bg-white/5 rounded-lg flex items-center justify-center text-red-400 font-bold italic">@</div>
                        <div>
                            <p class="text-[10px] uppercase tracking-widest text-gray-500 font-bold">Email</p>
                            <p class="text-xl">info@sermont.es</p>
                        </div>
                    </div>
                    <div class="flex items-center gap-6">
                        <div class="w-12 h-12 bg-white/5 rounded-lg flex items-center justify-center text-red-400">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                            </svg>
                        </div>
                        <div>
                            <p class="text-[10px] uppercase tracking-widest text-gray-500 font-bold">Teléfono</p>
                            <p class="text-xl">+34 934 231 510</p>
                        </div>
                    </div>
                    <div class="flex items-center gap-6">
                        <div class="w-12 h-12 bg-white/5 rounded-lg flex items-center justify-center text-red-400">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            </svg>
                        </div>
                        <div>
                            <p class="text-[10px] uppercase tracking-widest text-gray-500 font-bold">Ubicación</p>
                            <p class="text-xl">Calle Sepúlveda, 140 Bis <br>08011 Barcelona</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-xl p-10 text-slate-900 shadow-2xl">
                <form class="space-y-5">
                    <div class="grid md:grid-cols-2 gap-5">
                        <input type="text" name="nombre" class="input-field w-full p-4 rounded text-sm bg-gray-50 border border-gray-200 focus:border-[#a6192e] focus:bg-white focus:outline-none focus:ring-3 focus:ring-[#a6192e]/10 transition-all" placeholder="Nombre">
                        <input type="text" name="empresa" class="input-field w-full p-4 rounded text-sm bg-gray-50 border border-gray-200 focus:border-[#a6192e] focus:bg-white focus:outline-none focus:ring-3 focus:ring-[#a6192e]/10 transition-all" placeholder="Empresa">
                    </div>
                    <input type="email" name="email" class="input-field w-full p-4 rounded text-sm bg-gray-50 border border-gray-200 focus:border-[#a6192e] focus:bg-white focus:outline-none focus:ring-3 focus:ring-[#a6192e]/10 transition-all" placeholder="Email corporativo">
                    <textarea rows="4" name="consulta" class="input-field w-full p-4 rounded text-sm bg-gray-50 border border-gray-200 focus:border-[#a6192e] focus:bg-white focus:outline-none focus:ring-3 focus:ring-[#a6192e]/10 transition-all" placeholder="Su consulta..."></textarea>
                    <button type="submit" class="w-full bg-[#a6192e] hover:bg-red-700 text-white font-bold py-4 rounded transition-all shadow-lg uppercase text-xs tracking-widest">Enviar Solicitud</button>
                </form>
            </div>
        </div>
    </div>
</section>
