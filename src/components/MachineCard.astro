---
interface Props {
  slug: string;
  model: string;
  title: string;
  subtitle: string;
  image: string;
}
const { slug, model, title, subtitle, image } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<article class="machine-card bg-white p-12 text-center flex flex-col items-center border border-gray-200 hover:border-[#a6192e] hover:shadow-lg hover:-translate-y-1 transition-all">
    <img 
        src={image} 
        alt={title} 
        class="h-64 object-contain mb-8"
        loading="lazy"
        decoding="async"
        width="480"
        height="570"
    >
    <h4 class="text-2xl font-black text-[#0a192f] uppercase tracking-tighter mb-4">{title}</h4>
    <p class="text-xs text-gray-400 font-bold uppercase tracking-widest mb-6 italic">{subtitle}</p>
    <a href={`${base}maquina/${slug}`} class="text-[#a6192e] font-black text-xs uppercase tracking-widest hover:underline flex items-center gap-2">
        Leer m√°s <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
    </a>
</article>
