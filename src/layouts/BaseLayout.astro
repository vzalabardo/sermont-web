---
import BaseHead from '../components/BaseHead.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import FloatingContact from '../components/FloatingContact.astro';
import CookieBanner from '../components/CookieBanner.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  ogImage?: string;
  canonical?: string;
  jsonLd?: object;
  activePage?: 'home' | 'sector' | 'maquina';
  bodyClass?: string;
}

const { title, description, ogImage, canonical, jsonLd, activePage = 'home', bodyClass = '' } = Astro.props;
---

<!DOCTYPE html>
<html lang="es" class="scroll-smooth">
<head>
    <BaseHead 
        title={title} 
        description={description} 
        ogImage={ogImage} 
        canonical={canonical}
        jsonLd={jsonLd}
    />
</head>
<body class={`font-sans bg-white ${bodyClass}`}>
    <FloatingContact />
    <Navbar activePage={activePage} />
    <main>
        <slot />
    </main>
    <Footer />
    <CookieBanner />
</body>
</html>
