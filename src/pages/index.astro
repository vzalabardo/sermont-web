---
import BaseLayout from '../layouts/BaseLayout.astro';
import ContactSection from '../components/ContactSection.astro';
import sectors from '../data/sectors.json';

const base = import.meta.env.BASE_URL;

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "Sermont Maquinaria",
  "url": "https://www.sermont.es",
  "logo": "https://www.sermont.es/logo.png",
  "description": "Suministramos, instalamos y mantenemos la maquinaria de lavado más avanzada para la industria 4.0. Representantes de NERKON y JEROS en España y Portugal.",
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Barcelona",
    "addressCountry": "ES"
  },
  "telephone": "+34934231510",
  "email": "info@sermont.es",
  "sameAs": []
};
---

<BaseLayout 
  title="Sermont | Soluciones de Lavado Industrial - Nerkon & Jeros"
  description="Suministramos, instalamos y mantenemos la maquinaria de lavado más avanzada para la industria 4.0. Representantes de NERKON y JEROS en España y Portugal."
  activePage="home"
  jsonLd={jsonLd}
>

    <!-- HERO SECTION -->
    <section class="min-h-screen flex flex-col justify-center items-center text-center text-white px-4 pt-24 bg-cover bg-center" style="background: linear-gradient(rgba(10, 25, 47, 0.70), rgba(10, 25, 47, 0.70)), url('/sermont-web/images/fondo.jpeg'); background-size: cover; background-position: center;">
        <h2 class="font-bold tracking-[0.4em] uppercase mb-4 text-sm text-[#d10a3c]">Ingeniería en Sistemas de Lavado</h2>
        <h1 class="text-5xl md:text-7xl font-bold max-w-5xl mb-8 leading-tight">Excelencia técnica en limpieza industrial.</h1>
        <p class="text-xl text-gray-300 max-w-2xl mb-12 font-light">Suministramos, instalamos y mantenemos la maquinaria de lavado más avanzada para la industria 4.0.</p>
        
        <!-- SECTOR GRID -->
        <div id="industrias" class="flex flex-wrap justify-center w-full max-w-7xl mb-10 overflow-visible">
            
            <!-- FILA 1 (5 ELEMENTOS) -->
            <div class="flex w-full justify-center">
                {sectors.slice(0, 5).map((sector, i) => {
                    const roundedClass = i === 0 ? 'rounded-tl-3xl' : i === 4 ? 'rounded-tr-3xl' : '';
                    const borderClass = i < 4 ? 'border-r' : '';
                    return (
                        <a href={`${base}sector/${sector.slug}`} class={`sector-card w-1/5 p-10 flex flex-col items-center border-b border-white/10 ${borderClass} border-white/10 ${roundedClass} bg-white/5 backdrop-blur-sm border border-white/10 transition-all duration-300 hover:bg-[#d10a3c] hover:-translate-y-1 hover:rounded-xl hover:z-10`}>
                            <svg class="w-14 h-14 mb-4 text-blue-400 transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <Fragment set:html={sector.icon} />
                            </svg>
                            <span class="text-[10px] font-bold uppercase tracking-widest text-center leading-tight">{sector.name}</span>
                        </a>
                    );
                })}
            </div>

            <!-- FILA 2 (4 ELEMENTOS CENTRADOS) -->
            <div class="flex w-full justify-center">
                {sectors.slice(5, 9).map((sector, i) => {
                    const roundedClass = i === 0 ? 'rounded-bl-3xl' : i === 3 ? 'rounded-br-3xl' : '';
                    const borderClass = i < 3 ? 'border-r' : '';
                    return (
                        <a href={`${base}sector/${sector.slug}`} class={`sector-card w-1/5 p-10 flex flex-col items-center ${borderClass} border-white/10 ${roundedClass} bg-white/5 backdrop-blur-sm border border-white/10 transition-all duration-300 hover:bg-[#d10a3c] hover:-translate-y-1 hover:rounded-xl hover:z-10`}>
                            <svg class="w-14 h-14 mb-4 text-blue-400 transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <Fragment set:html={sector.icon} />
                            </svg>
                            <span class="text-[10px] font-bold uppercase tracking-widest text-center leading-tight">{sector.name}</span>
                        </a>
                    );
                })}
            </div>
        </div>

        <a href={`${base}maquinaria`} class="bg-white text-[#0a192f] hover:bg-[#d10a3c] hover:text-white px-8 py-4 rounded-full font-bold transition shadow-xl uppercase text-sm tracking-wider">
            Ver todas las máquinas
        </a>
    </section>

    <!-- SOBRE SERMONT -->
    <section id="nosotros" class="py-24 px-6 bg-white">
        <div class="max-w-7xl mx-auto grid md:grid-cols-2 gap-20 items-center">
            <div class="relative">
                <img src="https://www.nerkon.com/file.php?nid=21761&oid=12660174" alt="Maquinaria Sermont" class="relative rounded-2xl shadow-2xl z-10 border-l-8 border-[#d10a3c]" loading="lazy" decoding="async">
                <div class="absolute -bottom-8 -right-8 bg-[#0a192f] text-white p-8 rounded-xl shadow-xl z-20">
                    <p class="text-4xl font-bold mb-1">SERMONT</p>
                    <p class="text-[10px] font-bold text-red-400 uppercase tracking-widest">Engineering Industrial Solutions</p>
                </div>
            </div>
            <div>
                <h3 class="text-[#d10a3c] font-bold uppercase tracking-[0.3em] text-xs mb-4">Sobre Nosotros</h3>
                <h2 class="text-4xl font-bold text-[#0a192f] mb-8 leading-tight">Su partner de confianza en España y Portugal.</h2>
                <p class="text-gray-600 mb-8 leading-relaxed text-lg">
                    En <strong>Sermont</strong>, nos especializamos en la integración de líneas completas de lavado. No solo suministramos equipos, diseñamos procesos eficientes que ahorran agua, energía y tiempo, garantizando la máxima higiene en sectores críticos.
                </p>
                <div class="flex flex-wrap gap-4 mt-10">
                    <span class="px-6 py-3 border border-gray-300 rounded text-xs font-bold text-[#0a192f] hover:bg-gray-50 transition uppercase tracking-widest cursor-pointer">Ver NERKON</span>
                    <a href={`${base}jeros`} class="px-6 py-3 border border-gray-300 rounded text-xs font-bold text-[#0a192f] hover:bg-gray-50 transition uppercase tracking-widest">Ver JEROS</a>
                </div>
            </div>
        </div>
    </section>

    <!-- SECCIÓN VALORES -->
    <section class="py-24 bg-slate-100">
        <div class="max-w-7xl mx-auto px-6">
            <div class="grid md:grid-cols-3 gap-10">
                <div class="bg-white p-10 rounded-xl shadow-sm hover:shadow-xl transition-all border-b-4 border-transparent hover:border-[#d10a3c]">
                    <div class="w-16 h-16 bg-slate-50 rounded-full flex items-center justify-center mb-6 mx-auto text-[#0a192f]">
                        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"/></svg>
                    </div>
                    <h3 class="text-xl font-bold mb-4 text-[#0a192f] text-center">Asesoría Especializada</h3>
                    <p class="text-gray-500 text-sm leading-relaxed mb-6 text-center">Acompañamiento técnico y comercial bajo los estándares de nuestras marcas representadas.</p>
                    <div class="text-center pt-4 border-t border-slate-100">
                        <span class="text-sm font-bold text-slate-400 block mb-1 uppercase tracking-widest">Contacto SAT</span>
                        <p class="text-lg font-bold text-[#d10a3c]">93 423 15 10</p>
                    </div>
                </div>
                <div class="bg-white p-10 rounded-xl shadow-sm hover:shadow-xl transition-all border-b-4 border-transparent hover:border-[#d10a3c]">
                    <div class="w-16 h-16 bg-slate-50 rounded-full flex items-center justify-center mb-6 mx-auto text-[#0a192f]">
                        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>
                    </div>
                    <h3 class="text-xl font-bold mb-4 text-[#0a192f] text-center">Calidad Garantizada</h3>
                    <p class="text-gray-500 text-sm leading-relaxed text-center">Equipos robustos de acero inoxidable diseñados para la máxima fiabilidad operativa y longevidad.</p>
                </div>
                <div class="bg-white p-10 rounded-xl shadow-sm hover:shadow-xl transition-all border-b-4 border-transparent hover:border-[#d10a3c]">
                    <div class="w-16 h-16 bg-slate-50 rounded-full flex items-center justify-center mb-6 mx-auto text-[#0a192f]">
                        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                    </div>
                    <h3 class="text-xl font-bold mb-4 text-[#0a192f] text-center">Rentabilidad Máxima</h3>
                    <p class="text-gray-500 text-sm leading-relaxed text-center">Optimización de consumos de agua y químicos para asegurar el mejor retorno de inversión (ROI).</p>
                </div>
            </div>
        </div>
    </section>

    <!-- SECCIÓN CLIENTES -->
    <section class="py-24 bg-white border-b border-gray-100">
        <div class="max-w-7xl mx-auto px-6 text-center">
            <h3 class="text-xs font-bold text-gray-400 uppercase tracking-widest mb-16 italic">Empresas que confían en nuestra tecnología</h3>
            <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-12 items-center">
                <img src="https://upload.wikimedia.org/wikipedia/commons/c/ce/Coca-Cola_logo.svg" alt="Coca Cola" class="h-6 mx-auto grayscale opacity-60 hover:grayscale-0 hover:opacity-100 transition-all" loading="lazy">
                <img src="https://upload.wikimedia.org/wikipedia/commons/a/a6/Logo_NIKE.svg" alt="Nike" class="h-8 mx-auto grayscale opacity-60 hover:grayscale-0 hover:opacity-100 transition-all" loading="lazy">
                <img src="https://upload.wikimedia.org/wikipedia/commons/c/ce/Coca-Cola_logo.svg" alt="Coca Cola" class="h-6 mx-auto grayscale opacity-60 hover:grayscale-0 hover:opacity-100 transition-all" loading="lazy">
                <img src="https://upload.wikimedia.org/wikipedia/commons/a/a6/Logo_NIKE.svg" alt="Nike" class="h-8 mx-auto grayscale opacity-60 hover:grayscale-0 hover:opacity-100 transition-all" loading="lazy">
                <img src="https://upload.wikimedia.org/wikipedia/commons/c/ce/Coca-Cola_logo.svg" alt="Coca Cola" class="h-6 mx-auto grayscale opacity-60 hover:grayscale-0 hover:opacity-100 transition-all" loading="lazy">
                <img src="https://upload.wikimedia.org/wikipedia/commons/a/a6/Logo_NIKE.svg" alt="Nike" class="h-8 mx-auto grayscale opacity-60 hover:grayscale-0 hover:opacity-100 transition-all" loading="lazy">
            </div>
        </div>
    </section>

    <!-- FORMULARIO DE CONTACTO -->
    <ContactSection />

</BaseLayout>

<style>
    .sector-card:hover svg {
        color: #ffffff;
    }
</style>
