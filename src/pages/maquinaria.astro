---
import BaseLayout from '../layouts/BaseLayout.astro';
import ContactSection from '../components/ContactSection.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import maquinas from '../data/maquinas.json';
import sectors from '../data/sectors.json';

const base = import.meta.env.BASE_URL;

const categories = [...new Set(maquinas.map(m => m.category))];

const jsonLd = {
    "@context": "https://schema.org",
    "@type": "CollectionPage",
    "name": "Catálogo de Maquinaria Industrial | Sermont",
    "description": "Catálogo completo de maquinaria de lavado industrial. Lavautensilios, túneles de lavado y sistemas especiales para todos los sectores.",
    "url": "https://www.sermont.es/maquinaria",
    "mainEntity": {
        "@type": "ItemList",
        "itemListElement": maquinas.map((m, i) => ({
            "@type": "ListItem",
            "position": i + 1,
            "url": `https://www.sermont.es/maquina/${m.slug}`,
            "name": m.title
        }))
    }
};

const breadcrumbs = [
    { label: "Inicio", href: base },
    { label: "Maquinaria" }
];
---

<BaseLayout
    title="Catálogo de Maquinaria Industrial | Sermont"
    description="Catálogo completo de maquinaria de lavado industrial. Lavautensilios, túneles de lavado y sistemas especiales para todos los sectores."
    activePage="maquina"
    jsonLd={jsonLd}
>

    <!-- BREADCRUMBS -->
    <div class="pt-24 bg-white">
        <div class="max-w-7xl mx-auto px-6 pt-4">
            <Breadcrumbs items={breadcrumbs} />
        </div>
    </div>

    <!-- HERO -->
    <section class="py-20 text-white relative bg-cover bg-center" style="background: linear-gradient(rgba(10, 25, 47, 0.85), rgba(10, 25, 47, 0.85)), url('/sermont-web/images/fondo.jpeg'); background-size: cover; background-position: center;">
        <div class="max-w-7xl mx-auto px-6 text-center">
            <h1 class="text-5xl md:text-6xl font-black mb-6 leading-tight uppercase italic tracking-tighter">
                Catálogo de Maquinaria
            </h1>
            <p class="text-xl text-gray-300 max-w-3xl mx-auto mb-10 font-light leading-relaxed">
                Encuentra la solución de lavado industrial perfecta para tu sector. Filtra por categoría, sector o busca directamente.
            </p>

            <!-- BUSCADOR -->
            <div class="max-w-2xl mx-auto relative">
                <div class="relative">
                    <svg class="absolute left-5 top-1/2 -translate-y-1/2 w-6 h-6 text-gray-500 z-10" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
                    <input 
                        type="text" 
                        id="search-input"
                        placeholder="Buscar máquina por nombre, modelo o descripción..."
                        class="w-full pl-14 pr-14 py-5 rounded-full bg-white text-[#0a192f] text-base font-medium shadow-2xl border-2 border-white/20 focus:border-[#d10a3c] focus:outline-none focus:ring-4 focus:ring-red-100 transition-all placeholder:text-gray-400"
                    >
                    <button id="clear-search" class="absolute right-5 top-1/2 -translate-y-1/2 text-gray-400 hover:text-red-500 hover:bg-red-50 rounded-full p-1 transition hidden z-10">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>
                    </button>
                </div>
            </div>
        </div>
    </section>

    <!-- FILTROS + RESULTADOS -->
    <section class="py-16 bg-[#f8fafc]">
        <div class="max-w-7xl mx-auto px-6">

            <!-- BARRA DE FILTROS -->
            <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 mb-12">
                <div class="flex flex-col md:flex-row md:items-center gap-6">
                    
                    <!-- Filtro por Categoría -->
                    <div class="flex-1">
                        <label class="block text-[10px] font-bold uppercase tracking-widest text-gray-400 mb-2">Categoría</label>
                        <div class="flex flex-wrap gap-2" id="category-filters">
                            <button data-category="all" class="filter-btn active-filter px-4 py-2 rounded-full text-xs font-bold uppercase tracking-wider transition-all">
                                Todas
                            </button>
                            {categories.map(cat => (
                                <button data-category={cat} class="filter-btn px-4 py-2 rounded-full text-xs font-bold uppercase tracking-wider transition-all">
                                    {cat}
                                </button>
                            ))}
                        </div>
                    </div>

                    <!-- Filtro por Sector -->
                    <div class="flex-1">
                        <label class="block text-[10px] font-bold uppercase tracking-widest text-gray-400 mb-2">Sector</label>
                        <select id="sector-filter" class="w-full px-4 py-2.5 rounded-lg border border-gray-200 text-sm font-medium text-[#0a192f] focus:border-[#d10a3c] focus:outline-none transition bg-white cursor-pointer">
                            <option value="all">Todos los sectores</option>
                            {sectors.map(s => (
                                <option value={s.slug}>{s.name}</option>
                            ))}
                        </select>
                    </div>

                    <!-- Contador + Reset -->
                    <div class="flex items-end gap-4">
                        <div class="text-center">
                            <span id="results-count" class="block text-3xl font-black text-[#0a192f]">{maquinas.length}</span>
                            <span class="text-[10px] font-bold uppercase tracking-widest text-gray-400">Máquinas</span>
                        </div>
                        <button id="reset-filters" class="px-4 py-2.5 rounded-lg border border-gray-200 text-xs font-bold uppercase tracking-wider text-gray-400 hover:text-red-500 hover:border-red-200 transition hidden">
                            <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/></svg>
                            Reset
                        </button>
                    </div>
                </div>
            </div>

            <!-- GRID DE MÁQUINAS -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10" id="machines-grid">
                {maquinas.map((machine) => (
                    <article 
                        class="machine-item bg-white p-12 text-center flex flex-col items-center border border-gray-200 hover:border-[#d10a3c] hover:shadow-lg hover:-translate-y-1 transition-all"
                        data-title={machine.title.toLowerCase()}
                        data-model={machine.model.toLowerCase()}
                        data-subtitle={machine.subtitle.toLowerCase()}
                        data-description={machine.description.toLowerCase()}
                        data-category={machine.category}
                        data-sectors={JSON.stringify(machine.sectors)}
                        data-slug={machine.slug}
                    >
                        <img 
                            src={machine.gallery[0]} 
                            alt={machine.title} 
                            class="h-64 object-contain mb-8"
                            loading="lazy"
                            decoding="async"
                            width="480"
                            height="570"
                        >
                        <span class="text-[10px] font-bold uppercase tracking-widest text-[#0033A0] bg-blue-50 px-3 py-1 rounded-full mb-4">{machine.category}</span>
                        <h4 class="text-2xl font-black text-[#0a192f] uppercase tracking-tighter mb-4">{machine.title}</h4>
                        <p class="text-xs text-gray-400 font-bold uppercase tracking-widest mb-6 italic">{machine.subtitle}</p>
                        <a href={`${base}maquina/${machine.slug}`} class="text-[#d10a3c] font-black text-xs uppercase tracking-widest hover:underline flex items-center gap-2 mt-auto">
                            Leer más <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
                        </a>
                    </article>
                ))}
            </div>

            <!-- MENSAJE SIN RESULTADOS -->
            <div id="no-results" class="hidden text-center py-20">
                <svg class="w-16 h-16 text-gray-300 mx-auto mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
                <h3 class="text-2xl font-bold text-gray-400 mb-2">No se encontraron máquinas</h3>
                <p class="text-gray-400 mb-6">Prueba con otros filtros o términos de búsqueda.</p>
                <button id="no-results-reset" class="text-[#d10a3c] font-bold text-sm uppercase tracking-widest hover:underline">
                    Limpiar filtros
                </button>
            </div>

        </div>
    </section>

    <!-- FORMULARIO DE CONTACTO -->
    <ContactSection />

</BaseLayout>

<style>
    .filter-btn {
        background: #f8fafc;
        color: #64748b;
        border: 1px solid #e2e8f0;
    }
    .filter-btn:hover {
        background: #f1f5f9;
        color: #0a192f;
        border-color: #cbd5e1;
    }
    .filter-btn.active-filter {
        background: #0a192f;
        color: #ffffff;
        border-color: #0a192f;
    }
    .machine-item.hidden-by-filter {
        display: none;
    }
</style>

<script>
    const searchInput = document.getElementById('search-input') as HTMLInputElement;
    const clearSearch = document.getElementById('clear-search')!;
    const categoryBtns = document.querySelectorAll('.filter-btn');
    const sectorFilter = document.getElementById('sector-filter') as HTMLSelectElement;
    const machineItems = document.querySelectorAll('.machine-item') as NodeListOf<HTMLElement>;
    const resultsCount = document.getElementById('results-count')!;
    const resetBtn = document.getElementById('reset-filters')!;
    const noResults = document.getElementById('no-results')!;
    const noResultsReset = document.getElementById('no-results-reset')!;
    const grid = document.getElementById('machines-grid')!;

    let activeCategory = 'all';
    let activeSector = 'all';
    let searchTerm = '';

    function filterMachines() {
        let visibleCount = 0;

        machineItems.forEach(item => {
            const title = item.dataset.title || '';
            const model = item.dataset.model || '';
            const subtitle = item.dataset.subtitle || '';
            const description = item.dataset.description || '';
            const category = item.dataset.category || '';
            const sectors: string[] = JSON.parse(item.dataset.sectors || '[]');

            const matchesSearch = searchTerm === '' || 
                title.includes(searchTerm) || 
                model.includes(searchTerm) || 
                subtitle.includes(searchTerm) || 
                description.includes(searchTerm);

            const matchesCategory = activeCategory === 'all' || category === activeCategory;
            const matchesSector = activeSector === 'all' || sectors.includes(activeSector);

            if (matchesSearch && matchesCategory && matchesSector) {
                item.classList.remove('hidden-by-filter');
                visibleCount++;
            } else {
                item.classList.add('hidden-by-filter');
            }
        });

        resultsCount.textContent = String(visibleCount);

        if (visibleCount === 0) {
            noResults.classList.remove('hidden');
            grid.classList.add('hidden');
        } else {
            noResults.classList.add('hidden');
            grid.classList.remove('hidden');
        }

        const hasFilters = activeCategory !== 'all' || activeSector !== 'all' || searchTerm !== '';
        resetBtn.classList.toggle('hidden', !hasFilters);
    }

    // Buscador
    searchInput.addEventListener('input', () => {
        searchTerm = searchInput.value.toLowerCase().trim();
        clearSearch.classList.toggle('hidden', searchTerm === '');
        filterMachines();
    });

    clearSearch.addEventListener('click', () => {
        searchInput.value = '';
        searchTerm = '';
        clearSearch.classList.add('hidden');
        filterMachines();
    });

    // Filtros de categoría
    categoryBtns.forEach(btn => {
        btn.addEventListener('click', () => {
            categoryBtns.forEach(b => b.classList.remove('active-filter'));
            btn.classList.add('active-filter');
            activeCategory = (btn as HTMLElement).dataset.category || 'all';
            filterMachines();
        });
    });

    // Filtro de sector
    sectorFilter.addEventListener('change', () => {
        activeSector = sectorFilter.value;
        filterMachines();
    });

    // Reset
    function resetAll() {
        searchInput.value = '';
        searchTerm = '';
        clearSearch.classList.add('hidden');
        activeCategory = 'all';
        activeSector = 'all';
        sectorFilter.value = 'all';
        categoryBtns.forEach(b => b.classList.remove('active-filter'));
        categoryBtns[0]?.classList.add('active-filter');
        filterMachines();
    }

    resetBtn.addEventListener('click', resetAll);
    noResultsReset.addEventListener('click', resetAll);
</script>
